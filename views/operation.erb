<%= @num1 = params[:number1].to_i
    @num2 = params[:number2].to_i
    @operation = params[:operation]
    case @operation
    when 'add'
      "#{@num1 + @num2}"
    when 'subtract'
      "#{@num1 - @num2}"
    when 'multiply'
      "#{@num1 * @num2}"
    when 'divide'
      "#{@num1 / @num2}"
    end %>
